#include <stdio.h>

int main(){
    int t,sum; 
    scanf("%d",&t);
    for(int a0 = 0; a0 < t; a0++){
        if (a0%3==0 && a0%5==0)
        {
            sum+=a0;
        }
        if (((a0%5==0) || (a0%3==0)) && (a0%15!=0)) {
            sum+=a0;
        }
       
    }
    printf("%d",sum); 
    return 0;
}
